<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_16">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_event__mcv_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160">

            <ImageView
                android:id="@+id/item_event__iv_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_placeholder"
                android:contentDescription="@string/description_service"
                android:foreground="@color/color_transparent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_event__tv_title"
                style="@style/TextView.H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:lines="2"
                android:gravity="bottom"
                android:ellipsize="end"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_24"
                tools:text="Сервис" />

            <TextView
                android:id="@+id/item_event__tv_starts"
                style="@style/TextView.Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:background="@drawable/background_card"
                android:gravity="center"
                android:minWidth="@dimen/dp_100"
                android:padding="@dimen/dp_4"
                tools:text="16 мая 2021" />

            <TextView
                android:id="@+id/item_event__tv_ends"
                style="@style/TextView.Default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/dp_16"
                android:background="@drawable/background_card"
                android:gravity="center"
                android:minWidth="@dimen/dp_100"
                android:padding="@dimen/dp_4"
                tools:text="16 мая 2021" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>