<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.services.ServicesFragment">

    <include
        android:id="@+id/frg_services__layout_toolbar"
        layout="@layout/include_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_24">

            <TextView
                android:id="@+id/frg_services__tv_actual"
                style="@style/TextView.H1.Black"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:text="@string/service_actual_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/frg_services__rv_actual"
                style="@style/Recycler.Service"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frg_services__tv_actual"
                tools:listitem="@layout/item_actual" />

            <TextView
                android:id="@+id/frg_services__tv_university"
                style="@style/TextView.H1.Black"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:text="@string/service_university_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frg_services__rv_actual" />

            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/frg_services__rv_university"
                style="@style/Recycler.Service"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frg_services__tv_university"
                tools:listitem="@layout/item_service" />

            <TextView
                android:id="@+id/frg_services__tv_student"
                style="@style/TextView.H1.Black"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:text="@string/service_student_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frg_services__rv_university" />

            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/frg_services__rv_student"
                style="@style/Recycler.Service"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frg_services__tv_student"
                tools:listitem="@layout/item_service" />

            <TextView
                android:id="@+id/frg_services__tv_other"
                style="@style/TextView.H1.Black"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:text="@string/service_other_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frg_services__rv_student" />

            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/frg_services__rv_other"
                style="@style/Recycler.Service"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frg_services__tv_other"
                tools:listitem="@layout/item_service" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>