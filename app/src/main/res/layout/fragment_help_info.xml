<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/frg_help_info__layout_toolbar"
        layout="@layout/include_toolbar" />

    <TextView
        android:id="@+id/frg_help_info__tv_title"
        style="@style/TextView.H2.Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:paddingHorizontal="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/frg_help_info__layout_toolbar"
        tools:text="Текст просьбы" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/frg_help_info__rv_tags"
        style="@style/RecyclerView.Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/frg_help_info__tv_title"
        tools:listitem="@layout/item_help_tag" />

    <TextView
        android:id="@+id/frg_help_info__tv_desc"
        style="@style/TextView.Default.Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:paddingHorizontal="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/frg_help_info__rv_tags"
        tools:text="Текст просьбы" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/frg_help_info__mb_send"
        style="@style/Button.Default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help_button"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>