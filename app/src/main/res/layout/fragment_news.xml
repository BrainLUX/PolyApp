<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/frg_news__layout_toolbar"
        layout="@layout/include_toolbar" />

    <ProgressBar
        android:id="@+id/frg_news__pb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/frg_news__mcv_tabs_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardBackgroundColor="@color/color_transparent"
        app:cardCornerRadius="@dimen/dp_0"
        app:cardElevation="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@id/frg_news__layout_toolbar">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/frg_news__tl_tabs"
            style="@style/TabLayout.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/frg_news__vp2_fragments"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_news__mcv_tabs_holder" />
</androidx.constraintlayout.widget.ConstraintLayout>