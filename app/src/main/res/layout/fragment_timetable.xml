<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.timetable.TimetableFragment">

    <include
        android:id="@+id/frg_timetable__include_toolbar"
        layout="@layout/include_timetable_toolbar" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/frg_timetable__tl_tabs"
        style="@style/TabLayout.Timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/frg_timetable__include_toolbar" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/frg_timetable__vp2_pages"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:clipToPadding="false"
        android:paddingTop="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_timetable__tl_tabs" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/frg_timetable__fab_settings"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_margin="@dimen/dp_16"
        android:contentDescription="@string/timetable_choose_group"
        android:src="@drawable/ic_settings_24"
        app:fabCustomSize="@dimen/dp_64"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
