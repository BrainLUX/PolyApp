<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/frg_eat__layout_toolbar"
        layout="@layout/include_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/frg_eat__rv_tags"
        style="@style/RecyclerView.Linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/frg_eat__layout_toolbar"
        tools:listitem="@layout/item_eat_tag" />

    <com.todkars.shimmer.ShimmerRecyclerView
        android:id="@+id/frg_eat__rv_list"
        style="@style/RecyclerView.Linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frg_eat__rv_tags"
        tools:listitem="@layout/item_eat" />
</androidx.constraintlayout.widget.ConstraintLayout>