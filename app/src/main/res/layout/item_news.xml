<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_secondary">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_primary"
        app:cardElevation="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_8"
        app:cardCornerRadius="@dimen/dp_0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_news__tv_title"
                style="@style/TextView.Middle.Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                tools:text="@tools:sample/lorem" />

            <ImageView
                android:id="@+id/item_news__iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                android:layout_marginBottom="@dimen/dp_16"
                android:contentDescription="@string/description_news"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/backgrounds/scenic" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>