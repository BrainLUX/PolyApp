<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/frg_help_info__layout_toolbar"
        layout="@layout/include_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/frg_help_info__layout_input_title"
                layout="@layout/include_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/frg_help_info__layout_input_desc"
                layout="@layout/include_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/frg_help_info__layout_input_title" />

            <include
                android:id="@+id/frg_help_info__layout_input_link"
                layout="@layout/include_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/frg_help_info__layout_input_desc" />

            <TextView
                android:id="@+id/frg_help_info__tv_tags_title"
                style="@style/TextView.Default.Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingHorizontal="@dimen/dp_16"
                android:text="@string/help_add_choose_tags"
                app:layout_constraintTop_toBottomOf="@id/frg_help_info__layout_input_link" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/frg_help_info__rv_tags"
                style="@style/RecyclerView.Linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@id/frg_help_info__tv_tags_title"
                tools:listitem="@layout/item_help_tag" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/frg_help_info__mb_send"
                style="@style/Button.Default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_add_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frg_help_info__rv_tags"
                app:layout_constraintVertical_bias="1" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>