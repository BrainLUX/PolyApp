<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/timetableFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.brainlux.polyapp.ui.news.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_newsFragment_to_newsInfoFragment"
            app:destination="@id/newsInfoFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
    </fragment>
    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.brainlux.polyapp.ui.services.ServicesFragment"
        android:label="fragment_services"
        tools:layout="@layout/fragment_services">
        <action
            android:id="@+id/action_servicesFragment_to_buildingsFragment"
            app:destination="@id/buildingsFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_servicesFragment_to_supportFragment"
            app:destination="@id/supportFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_servicesFragment_to_helpFragment"
            app:destination="@id/helpFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_servicesFragment_to_careersFragment"
            app:destination="@id/careersFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_servicesFragment_to_clubsFragment"
            app:destination="@id/clubsFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_servicesFragment_to_eventsFragment"
            app:destination="@id/eventsFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_servicesFragment_to_enquiryFragment"
            app:destination="@id/enquiryFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_servicesFragment_to_feedbackFragment"
            app:destination="@id/feedbackFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_servicesFragment_to_eatFragment"
            app:destination="@id/eatFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
    </fragment>
    <fragment
        android:id="@+id/timetableFragment"
        android:name="com.brainlux.polyapp.ui.timetable.TimetableFragment"
        android:label="fragment_timetable"
        tools:layout="@layout/fragment_timetable">
        <action
            android:id="@+id/action_timetableFragment_to_facultiesFragment"
            app:destination="@id/facultiesFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_timetableFragment_to_facultiesFragment_no_anim"
            app:destination="@id/facultiesFragment" />
    </fragment>

    <fragment
        android:id="@+id/buildingsFragment"
        android:name="com.brainlux.polyapp.ui.buildings.BuildingsFragment"
        android:label="fragment_buildings"
        tools:layout="@layout/fragment_buildings">
        <action
            android:id="@+id/action_buildingsFragment_to_buildingFragment"
            app:destination="@id/buildingFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
    </fragment>
    <fragment
        android:id="@+id/buildingFragment"
        android:name="com.brainlux.polyapp.ui.building.BuildingFragment"
        android:label="BuildingFragment"
        tools:layout="@layout/fragment_building" />
    <fragment
        android:id="@+id/supportFragment"
        android:name="com.brainlux.polyapp.ui.support.SupportFragment"
        android:label="SupportFragment"
        tools:layout="@layout/fragment_support" />
    <fragment
        android:id="@+id/helpFragment"
        android:name="com.brainlux.polyapp.ui.help.HelpFragment"
        android:label="HelpFragment"
        tools:layout="@layout/fragment_help">
        <action
            android:id="@+id/action_helpFragment_to_helpInfoFragment"
            app:destination="@id/helpInfoFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
        <action
            android:id="@+id/action_helpFragment_to_helpAddFragment"
            app:destination="@id/helpAddFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
    </fragment>
    <fragment
        android:id="@+id/helpInfoFragment"
        android:name="com.brainlux.polyapp.ui.help_info.HelpInfoFragment"
        android:label="HelpInfoFragment"
        tools:layout="@layout/fragment_help_info" />
    <fragment
        android:id="@+id/helpAddFragment"
        android:name="com.brainlux.polyapp.ui.help_add.HelpAddFragment"
        android:label="HelpAddFragment"
        tools:layout="@layout/fragment_help_add" />
    <fragment
        android:id="@+id/careersFragment"
        android:name="com.brainlux.polyapp.ui.careers.CareersFragment"
        android:label="CareersFragment"
        tools:layout="@layout/fragment_careers" />
    <fragment
        android:id="@+id/clubsFragment"
        android:name="com.brainlux.polyapp.ui.clubs.ClubsFragment"
        android:label="ClubsFragment"
        tools:layout="@layout/fragment_clubs" />
    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.brainlux.polyapp.ui.events.EventsFragment"
        android:label="EventsFragment"
        tools:layout="@layout/fragment_events">
        <action
            android:id="@+id/action_eventsFragment_to_eventInfoFragment"
            app:destination="@id/eventInfoFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
    </fragment>
    <fragment
        android:id="@+id/eventInfoFragment"
        android:name="com.brainlux.polyapp.ui.event_info.EventInfoFragment"
        android:label="EventInfoFragment"
        tools:layout="@layout/fragment_event_info" />
    <fragment
        android:id="@+id/enquiryFragment"
        android:name="com.brainlux.polyapp.ui.enquiry.EnquiryFragment"
        android:label="EnquiryFragment"
        tools:layout="@layout/fragment_enquiry" />
    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.brainlux.polyapp.ui.feedback.FeedbackFragment"
        android:label="FeedbackFragment"
        tools:layout="@layout/fragment_feedback" />
    <fragment
        android:id="@+id/eatFragment"
        android:name="com.brainlux.polyapp.ui.eat.EatFragment"
        android:label="EatFragment"
        tools:layout="@layout/fragment_eat" />
    <fragment
        android:id="@+id/newsInfoFragment"
        android:name="com.brainlux.polyapp.ui.news_info.NewsInfoFragment"
        android:label="NewsInfoFragment"
        tools:layout="@layout/fragment_news_info" />
    <fragment
        android:id="@+id/groupsFragment"
        android:name="com.brainlux.polyapp.ui.groups.GroupsFragment"
        android:label="GroupsFragment"
        tools:layout="@layout/fragment_groups">
        <action
            android:id="@+id/action_groupsFragment_to_timetableFragment"
            app:destination="@id/timetableFragment"
            app:enterAnim="@anim/open_fragment_slide_left"
            app:exitAnim="@anim/close_fragment_slide_right"
            app:popEnterAnim="@anim/open_fragment_slide_right"
            app:popExitAnim="@anim/close_fragment_slide_left"
            app:popUpTo="@id/timetableFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/facultiesFragment"
        android:name="com.brainlux.polyapp.ui.faculties.FacultiesFragment"
        android:label="FacultiesFragment"
        tools:layout="@layout/fragment_faculties">
        <action
            android:id="@+id/action_facultiesFragment_to_groupsFragment"
            app:destination="@id/groupsFragment"
            app:enterAnim="@anim/open_fragment_slide_right"
            app:exitAnim="@anim/close_fragment_slide_left"
            app:popEnterAnim="@anim/open_fragment_slide_left"
            app:popExitAnim="@anim/close_fragment_slide_right" />
    </fragment>
</navigation>